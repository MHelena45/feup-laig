<lxs>
    <scene root="myRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="0">
            <from x="50" y="50" z="50" />
            <to x="-50" y="-50" z="50" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="firstLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.1" linear="0" quadratic="0" /> 
        </omni>
        <omni id="secondLight" enabled="0">
            <location x="-8.2" y="-15.9" z="12" w="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0.2" linear="0.1" quadratic="0" /> 
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.jpg" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="planetTexture" file="scenes/images/planet.jpg" />
        <texture id="telescopeTexture" file="scenes/images/telescope.jpg" />
        <texture id="boardTexture" file="scenes/images/board.jpg" />
    </textures>

    <materials>

        <material id="backgroundMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="boardMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="sunMaterial" shininess="10">
            <emission r="1.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="moonMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="telescopeMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="identityTransform" >
            <scale x="1.0" y="1.0" z="1-0" />
        </transformation>

        <transformation id="boardTransform" >
            <translate x="-49.5" y="50.5" z="1" />
            <scale x="100" y="100" z="1" />
        </transformation>

        <transformation id ="telescopeTransform">
            <translate x="-9" y="0" z="12" />
        </transformation>

        <transformation id="starTransform">
            <translate x="6" y="5" z="24" />
        </transformation>

    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="0.5" y1="1" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0" z3="0" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="2" top="1" height="5" slices="8" stacks="8" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>

        <primitive id="torus">
            <torus innerRadius="0.25" outerRadius="1" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="myRoot">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="board" />
                <componentref id="star" />
                <componentref id="solarSystem" />
                <componentref id="telescope" />
            </children>
        </component> 

        <component id="board">

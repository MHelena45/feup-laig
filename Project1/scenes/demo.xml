<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.jpg" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="planetTexture" file="scenes/images/planet.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="sunMaterial" shininess="10">
            <emission r="1.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="moonMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="planetMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="2.2" y1="2" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0.5" z3="3" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="8" stacks="8" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="2" slices="10" stacks="10" />
        </primitive>

        <primitive id="demoTorus">
            <torus innerRadius="1" outerRadius="3" slices="10" loops="10" />
        </primitive>
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="board" />
                <componentref id="start" />
            </children>
        </component> 
        <component id="board">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="star">
            <transformation>
                <translate x="6" y="5" z="24" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="halfStarabove" />
                <componentref id="halfStardown" />
            </children>
        </component>
        <component id="halfStardown">
            <transformation>
                <rotate x="0" y="180" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="halfStarabove">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>
        <component id="sun">
        <transformation>
                <scale x="4" y="4" z="4" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
            <texture id="sunTexture"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>
        <component id="mercury">
            <transformation>
                <translate x="6" y="6" z="6" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="planetTexture"/>
            <children>
                <componentref id="planet" />
            </children>
        </component>
        <component id="mercury">
            <transformation>
                <translate x="12" y="12" z="-12" />
            </transformation>
            <materials>
                <material id="planetMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="planet" />
            </children>
        </component>
        <component id="planet">
            <transformation>
                <scale x="2" y="2" z="2" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>
        
       
    </components>
</lxs>
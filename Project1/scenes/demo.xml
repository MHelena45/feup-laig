        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="0.5" y1="0.8" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0" z3="0" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="15" stacks="15" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>

        <primitive id="torus">
            <torus inner="0.02" outer="1" slices="15" loops="15" />
        </primitive>
    </primitives>


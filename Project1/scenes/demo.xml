            </materials>
            <texture id="inherit" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
            </children>
        </component>

        <component id="leg1">
            <transformation>
                <rotate axis="z" angle="35" />

<lxs>
    <scene root="myRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="40">
            <from x="50" y="50" z="50" />
            <to x="-50" y="-50" z="-50" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <!--
        <spot id="ss" enabled="tt" angle="ff" exponent="ff">
            <location x="ff" y="ff" z="ff" w="ff" />
            <target x="ff" y="ff" z="ff" />
            <ambient r="ff" g="ff" b="ff" a="ff" />
            <diffuse r="ff" g="ff" b="ff" a="ff" />
            <specular r="ff" g="ff" b="ff" a="ff" />
            <attenuation constant="ff" linear="ff" quadratic="ff" />
        </spot>
        -->

        <omni id="firstLight" enabled="1">
            <location x="9.8" y="11.9" z="10.0" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" /> 
        </omni>
        
    </lights>

    <textures>
        <texture id="testTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>

        <material id="sunMaterial" shininess="10">
            <emission r="1.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>

    </materials>

    <transformations>

        <transformation id="identityTransform" >
            <scale x="1.0" y="1.0" z="1.0" /> 
        </transformation>

        <transformation id="testTransform" >
            <translate x="-5.0" y="1.0" z="1.0" /> 
        </transformation>

    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="0.5" y1="0.8" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0" z3="0" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="15" stacks="15" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="10" stacks="10" />
        </primitive>

        <primitive id="torus">
            <torus inner="0.04" outer="1" slices="15" loops="15" />
        </primitive>
    </primitives>

    <components>

        <component id="myRoot">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
            <texture id="none" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="testComponent" />
            </children>
        </component> 

        <component id="testComponent">
            <transformation>
                <transformationref id="testTransform" />
            </transformation>
            <materials>
                <material id="sunMaterial" />
            </materials>
            <texture id="testTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
       
    </components>
</lxs>
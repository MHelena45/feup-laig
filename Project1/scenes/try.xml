<lxs>
    <scene root="myRoot" axis_length="5"/>

    <views default="defaultCamera">
        <!-- view from the center -->
        <perspective id="defaultCamera" near="0.1" far="100" angle="47">
            <from x="-5" y="12" z="60" />
            <to x="0" y="15" z="0" />
        </perspective> 

        <!-- view from behind -->
        <perspective id="behindCamera" near="0.1" far="100" angle="45">
            <from x="-5" y="10" z="-60" />
            <to x="0" y="15" z="0" />
        </perspective> 

        <!-- view of an upper position -->
       <ortho id="upCamera" near="0.1" far="100" left="-50" right="50" top="40" bottom="-30" >
            <from x="10" y="60" z="0" />
            <to x="0" y="15" z="00" />
            <up x="0" y="1" z="0" /> 
        </ortho> 

        <!-- view of the earth and it's moon -->
       <ortho id="earthCamera" near="0.1" far="100" left="-20" right="20" top="10" bottom="-10" >
            <from x="5.4" y="20" z="6" />
            <to x="6.2" y="20" z="0" />
            <up x="0" y="1" z="0" /> 
        </ortho> 
        
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="firstLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" /> 
        </omni>

        <!-- ligth coming for the shooting star -->
        <spot id="starLight" enabled="1" angle="40" exponent="1">        
            <location x="-30" y="20" z="12" w="1.0" />
            <target x="-30" y="20" z="10" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="1.0" quadratic="0" /> 
        </spot>
        
        <!-- ligth coming for the sun -->
        <omni id="sunLight" enabled="1">
            <location x="0" y="20" z="2.1" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="1.0" quadratic="0" /> 
        </omni>

        <!-- ligth near the telescope  -->
        <omni id="telescopeLight" enabled="1">
            <location x="-22" y="0" z="12" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0" /> 
        </omni>
        
    </lights>

    <textures>
        <texture id="sunTexture" file="scenes/images/sun.jpg" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="planetTexture" file="scenes/images/planet.jpg" />
        <texture id="telescopeTexture" file="scenes/images/telescope.jpg" />
        <texture id="telescopeLegsTexture" file="scenes/images/telescopeLegs.jpg" />
    </textures>

    <materials>

        <material id="backgroundMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="sunMaterial" shininess="10">
            <emission r="1.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

        <material id="moonMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="OrbitMaterial" shininess="10">
            <emission r="0.4" g="0.4" b="0.4" a="1.0" />
            <ambient r="0.2" g="0.2" b="1.0" a="1.0" />
            <diffuse r="0.1" g="0.1" b="1.0" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <!-- difuse and shiny material to simulate black metal -->
        <material id="telescopeMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <!-- difuse and shiny material to simulate silver metal -->
        <material id="legMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="0" />
        </material>

        <material id="endLegMaterial" shininess="0">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

    </materials>

    <transformations>
        <transformation id="identityTransform" >
            <scale x="1.0" y="1.0" z="1.0" /> 
        </transformation>

        <transformation id ="telescopeTransform">
            <translate x="-30" y="0" z="12" />
            <scale x="2" y="2" z="2" />
        </transformation>

        <transformation id="starTransform">
            <translate x="-30" y="20" z="10" />
            <scale x="2" y="2" z="2" />
        </transformation>

    </transformations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="0.5" y1="0.8" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0" z3="0" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="18" stacks="18" />
        </primitive>

        <primitive id="torus">
            <torus inner="0.02" outer="1" slices="18" loops="18" />
        </primitive>

        <primitive id="torus0">
            <torus inner="0.01" outer="1" slices="18" loops="18" />
        </primitive>

        <primitive id="torus1">
            <torus inner="0.15" outer="1" slices="18" loops="18" />
        </primitive>

        <primitive id="torus2">
            <torus inner="0.25" outer="1" slices="18" loops="18" />
        </primitive>
    </primitives>

    <components>
        <component id="myRoot">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="telescope" />
            </children>
        </component> 

        <component id="telescope">
            <transformation>
                <transformationref id="telescopeTransform" />
            </transformation>
            <materials>
                <material id="telescopeMaterial" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="eyeglass" />                
                <componentref id="legs" />
            </children>
        </component>

        <component id="eyeglass">
            <transformation>
                <translate x="0" y="0.6" z="-2" />
            </transformation>
            <materials>
                <material id="telescopeMaterial"  />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <componentref id="eyeglasssdetail1" />
                <componentref id="eyeglasssdetail2" />
                <componentref id="innerEyeglass" />
            </children>
        </component>

        <component id="innerEyeglass">
            <transformation>
                <scale x="2.2" y="2.2" z="2.2" />
            </transformation>
            <materials>
                <material id="telescopeMaterial"  />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="eyeglasssdetail1"> <!-- detail with torus -->
            <transformation>
                <scale x="0.73" y="0.73" z="0.4" />
            </transformation>
            <materials>
                <material id="telescopeMaterial" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="torus2" />
            </children>
        </component>

        <component id="eyeglasssdetail2"> <!-- detail with torus -->
            <transformation>
                <translate x="0" y="0" z="4.4" />
                <scale x="0.38" y="0.38" z="0.2" />
            </transformation>
            <materials>
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus2" />
            </children>
        </component>

        <component id="legs">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="legMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
            </children>
        </component>

        <component id="leg1">
            <transformation>  
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="45" />             
            </transformation>
            <materials>
                <material id="legMaterial"   />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0" />
            <children>
                <primitiveref id="cylinder" />
                <componentref id="endOfLeg"/>
            </children>
        </component>

        <component id="leg2">
            <transformation>                             
                <rotate axis="x" angle="120" />
            </transformation>
            <materials>
                <material id="legMaterial"   />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="endOfLeg"/>
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <rotate axis="x" angle="45" />
            </transformation>
            <materials>
                <material id="legMaterial"  />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="endOfLeg"/>
            </children>
        </component>

        <component id="leg4">
            <transformation>
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="120" />             
            </transformation>
            <materials>
                <material id="legMaterial"  />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="endOfLeg"/>
                <primitiveref id="cylinder" />                
            </children>
        </component>

        <component id="endOfLeg">
            <transformation>
                <translate x="0" y="0" z="2" />      
                <scale x="0.19" y="0.19" z="0.19"/>
            </transformation>
            <materials>
                <material id="endLegMaterial"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus2" />
            </children>
        </component>

  
        </component>
       
    </components>
</lxs>
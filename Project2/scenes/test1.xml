    <primitives>
        <primitive id="plane">
            <plane npartsU="2" npartsV="2" />
        </primitive> 

        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="patch">
            <patch npointsU="2" npointsV="2" npartsU="2" npartsV="2" >
                <controlpoint xx="-2.0" yy="-2" zz="0.0" />
                <controlpoint xx="-2.0" yy="2" zz="0.0" />
                <controlpoint xx="2.0" yy="-2" zz="0.0" />
                <controlpoint xx="2.0" yy="2" zz="0.0" />
            </patch>
        </primitive> 

        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0.5" y3="0.8" z3="0" />
        </primitive>
        
        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="telescopeLegPrim">
            <cylinder base="0.2" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="18" stacks="18" />
        </primitive>

        <primitive id="thickOrbit">
            <torus inner="0.02" outer="1" slices="18" loops="18" />
        </primitive>

        <!-- orbits far from the sun need to be thinier because of big scales applyied -->
        <primitive id="thinOrbit">
            <torus inner="0.01" outer="1" slices="18" loops="18" />
        </primitive>

        <!-- for ring of saturn -->
        <primitive id="ring">
            <torus inner="0.15" outer="1" slices="18" loops="18" />
        </primitive>

        <primitive id="torus">
            <torus inner="0.25" outer="1" slices="18" loops="18" />
        </primitive>
    </primitives>

    <components>
        <component id="myRoot">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="backgroundMaterial" />
            </materials>
            <texture id="earthTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="shootingStar" /> 
                <componentref id="star" />
                <componentref id="star1" />
                <componentref id="solarSystem" />
                <componentref id="telescope" />
                <primitiveref id="patch" /> 
            </children>
        </component> 

        <!-- telescope components below -->
        <component id="telescope">
            <transformation>
                <transformationref id="telescopeTransform" />
            </transformation>
            <materials>
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="eyeglass" />                
                <componentref id="legs" />
            </children>
        </component>

        <component id="eyeglass">
            <transformation>
                <translate x="0" y="0.6" z="-2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="eyeglasssdetail1" />
                <componentref id="eyeglasssdetail2" />
                <componentref id="eyeglassTop" />
            </children>
        </component>

        <component id="eyeglassTop">
            <transformation>
                <scale x="2.2" y="2.2" z="2.2" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="eyeglasssdetail1"> <!-- detail with torus on the eyeglass -->
            <transformation>
                <scale x="0.73" y="0.73" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="eyeglasssdetail2"> <!-- detail with torus on the eyeglass -->
            <transformation>
                <translate x="0" y="0" z="4.4" />
                <scale x="0.38" y="0.38" z="0.2" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="legs">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="legMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
            </children>
        </component>

        <component id="leg1">
            <transformation>  
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="45" />             
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="telescopeLegPrim" />
                <componentref id="endOfLeg"/>
            </children>
        </component>

        <component id="leg2">
            <transformation>                             
                <rotate axis="x" angle="120" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>        
                <componentref id="endOfLeg"/>
                <primitiveref id="telescopeLegPrim" />
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <rotate axis="x" angle="45" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="telescopeLegPrim" />              
                <componentref id="endOfLeg"/>             
            </children>
        </component>

        <component id="leg4">
            <transformation>
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="120" />             
            </transformation>
            <materials>
                <material id="inherit" />

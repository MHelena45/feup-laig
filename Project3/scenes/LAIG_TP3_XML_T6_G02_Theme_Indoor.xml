<lxs>
    <scene root="root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="45" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="upCamera" near="0.1" far="500" angle="45">
            <from x="0" y="55" z="8" />
            <to x="0" y="0" z="-2" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.30" g="0.30" b="0.30" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="BrownPiecesLight" enabled="1">
            <location x="0" y="10" z="-20" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" /> 
        </omni>

        <omni id="WhitePiecesLight" enabled="1">
            <location x="0" y="10" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" /> 
        </omni>
    </lights>

    <textures>
        <texture id="skyTexture" file="scenes/images/sky.jpg" />
        <texture id="wood" file="scenes/images/wood.jpg" />
    </textures>

    <materials>
        <material id="whiteMaterial" shininess="1">
            <emission r="0.00" g="0.00" b="0.00" a="0.0" />
            <ambient r="0.70" g="0.60" b="0.50" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="lightwoodMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.85" g="0.75" b="0.50" a="1.0" />
            <diffuse r="0.85" g="0.75" b="0.50" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>

        <material id="darkwoodMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.30" g="0.12" b="0.0" a="1.0" />
            <diffuse r="0.25" g="0.12" b="0.0" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>

    </materials>

    <transformations>
        <transformation id="identityTransform" >
            <scale x="1.0" y="1.0" z="1.0" /> 
        </transformation>

        <transformation id="tableTransformation" >
            <rotate axis="x" angle="-90" />
            <scale x="11" y="10" z="1" />
            <translate x="0" y="0" z="-1" />
        </transformation>
    </transformations>

    <animations>

    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="ground">
            <rectangle x1="-50" y1="-50" x2="50" y2="50" />
        </primitive>

        <primitive id="sky">
            <sphere radius="-50" slices="60" stacks="30"/>
        </primitive>

        <primitive id="tableTop">
            <rectangle x1="-5" y1="-5" x2="5" y2="5" />
        </primitive>

        <primitive id="tableLeg">
            <cylinder base="0.3" top="0.5" height="4" slices="6" stacks="2" />
        </primitive>

    </primitives>
    
    <components>

        <component id="root">
            <transformation>
                <transformationref id="identityTransform"/>
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="skybox" />
                <componentref id="table" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <transformationref id="tableTransformation"/>
            </transformation>
            <materials>
                <material id="lightwoodMaterial" />
                <material id="darkwoodMaterial" />
            </materials>
            <texture id="wood" length_s="0.1" length_t="0.10"/>
            <children>
                <primitiveref id="tableTop" />
                <componentref id="legs" />
            </children>
        </component>

        <component id="legs">
            <transformation>
                <translate x="0" y="0" z="-4" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="leg0" />
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
            </children>
        </component>

        <component id="leg0">
            <transformation>
                <translate x="4" y="4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="leg1">
            <transformation>
                <translate x="4" y="-4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="leg2">
            <transformation>
                <translate x="-4" y="4" z="0" />
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <translate x="-4" y="-4" z="0" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="tableLeg" />
            </children>
        </component>
           <!-- skybox below --> 
        <component id="skybox">
            <transformation>
                <translate x="0" y="10" z="0"/>
                <scale x="180" y="180" z="180" /> 
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
                <!-- length is so small for texture to repeat over and over -->
                <texture id="skyTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="frontSkybox" />
                <componentref id="topSkybox" />
                <componentref id="bottomSkybox" />
                <componentref id="backSkybox" />                
                <componentref id="rightSkybox" />
                <componentref id="leftSkybox" /> 
            </children>
        </component>

        <component id="frontSkybox">
            <transformation>
                <translate x="0" y="0" z="0.5" />
                <rotate axis="y" angle="180" /> 
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component> 

        <component id="topSkybox">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component> 

       <component id="backSkybox">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>    

        <component id="rightSkybox">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>     

        <component id="bottomSkybox">
            <transformation>
                <translate x="0" y="-0.50" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="leftSkybox">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"  />
            </children>
        </component>

    </components>
</lxs>
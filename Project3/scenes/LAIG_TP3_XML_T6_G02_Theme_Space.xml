<lxs>
    <scene root="Root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="45" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.30" g="0.30" b="0.30" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="BrownPiecesLight" enabled="1">
            <location x="0" y="20" z="-10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" /> 
        </omni>

        <omni id="WhitePiecesLight" enabled="1">
            <location x="0" y="20" z="10" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" /> 
        </omni>

        <!-- ligth coming for the shooting star, linear attenuation because stars give ligth but not as must as the sun -->
        <spot id="starLight" enabled="1" angle="70" exponent="50">        
            <location x="-30" y="20" z="10.5" w="1.0" />
            <target x="-30" y="20" z="10" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
            <attenuation constant="0" linear="1.0" quadratic="0" /> 
        </spot>

        <!-- ligth near the telescope, with quadratic attenuation to only ligth the telescope -->
        <omni id="telescopeLight" enabled="1">
            <location x="-33.5" y="1.2" z="12" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="0" linear="0" quadratic="1.0" /> 
        </omni>

        <!-- ligth coming for the sun, attenuation linear because of the real intensity of the ligth of the sun  --> 
        <omni id="sunLight" enabled="1">
            <location x="0" y="20" z="2.1" w="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1.0" linear="0" quadratic="0" /> 
        </omni>    
    </lights>

    <textures>
        <texture id="starTexture" file="scenes/images/star.jpg" />
        <texture id="skyTexture" file="scenes/images/sky.jpg" />
        <texture id="trunkTexture" file="scenes/images/tree.jpg" />
        <texture id="pineTreeTexture" file="scenes/images/pineTree.jpg" />
        <texture id="grassTexture" file="scenes/images/grass.jpg" />
        <texture id="redTexture" file="scenes/images/red.jpg" />
        <texture id="sunTexture" file="scenes/images/sun.jpg" />
        <texture id="mercuryTexture" file="scenes/images/mercury.jpg" />
        <texture id="venusTexture" file="scenes/images/venus.jpg" />
        <texture id="earthTexture" file="scenes/images/earth.jpg" />
        <texture id="moonTexture" file="scenes/images/moon.jpg" />
        <texture id="marsTexture" file="scenes/images/mars.jpg" />
        <texture id="jupiterTexture" file="scenes/images/jupiter.jpg" />
        <texture id="saturnTexture" file="scenes/images/saturn.jpg" />
        <texture id="ringSaturnTexture" file="scenes/images/ring_saturn.jpg" />              
        <texture id="uranusTexture" file="scenes/images/uranus.jpg" />
        <texture id="neptuneTexture" file="scenes/images/neptune.jpg" />
        <texture id="starsTexture" file="scenes/images/stars.jpg" />
    </textures>

    <materials>
        <material id="blackMaterial" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="0.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

         <material id="backgroundMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="sunMaterial" shininess="10">
            <emission r="1.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="planetMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.7" g="0.7" b="0.7" a="0.7" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>

        <material id="orbitMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.05" g="0.05" b="0.3" a="0.05" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

        <!-- different blue -->
        <material id="orbitMaterial1" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.01" g="0.01" b="0.1" a="0.05" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

        <!-- difuse and shiny material to simulate black metal -->
        <material id="telescopeMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <!-- difuse and shiny material to simulate silver metal -->
        <material id="legMaterial" shininess="10">
            <emission r="0.1" g="0.1" b="0.1" a="1.0" />
            <ambient r="0.15" g="0.15" b="0.15" a="1.0" />
            <diffuse r="0" g="0" b="0" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="0" />
        </material>

        <!-- black to simulate rubber -->
        <material id="endLegMaterial" shininess="1">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.05" g="0.05" b="0.05" a="0.05" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

        <!-- shinny object to simulate the shine of a shootingStar track -->
        <material id="whiteMaterial" shininess="20">
            <emission r="1.0" g="1.0" b="1.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="0" g="0" b="0" a="0" />
        </material>

    </materials>

    <!-- where are the transformations of complete objcts, to become easier to move them around -->
    <transformations>
        <!-- where are the transformations of complete obejcts, to become easier to move them around -->
        <transformation id="identityTransform" >
            <scale x="1.0" y="1.0" z="1.0" /> 
        </transformation>

        <transformation id ="telescopeTransform">
            <translate x="-30" y="1" z="8" />
            <rotate axis="y" angle="-90" /> 
        </transformation>

        <transformation id="starTransform">
            <translate x="-25" y="2" z="-17.6" />
        </transformation>   

        <transformation id="star1Transform">
            <translate x="-15" y="7" z="-25" />
        </transformation>

        <transformation id="shootingStarTransform">
            <translate x="-35" y="5" z="-10" />
            <scale x="2" y="2" z="2" />
        </transformation> 

        <transformation id="universeTransform">
            <translate x="25" y="10" z="10" />
            <rotate axis="y" angle="-90" /> 
            <scale x="0.4" y="0.4" z="0.4" />
        </transformation> 
    </transformations>

    <animations>
        <animation id="starAnimation" >
            <keyframe instant="0">
                <translate x="0" y="0" z="0" /> 
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1.50" y="1.50" z="1.50" /> 
            </keyframe> 
        </animation> 
    </animations>

    <primitives>
        <primitive id="rectangle">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle3D">
            <patch npointsU="3" npointsV="2" npartsU="2" npartsV="2" >
                <controlpoint xx="0.0" yy="0.0" zz="0.0" />
                <controlpoint xx="0.499" yy="0.8" zz="0.0" />
                <controlpoint xx="0.5" yy="0.0" zz="0.2" />
                <controlpoint xx="0.5" yy="0.8" zz="0.0" />
                <controlpoint xx="1.0" yy="0.0" zz="0.0" />
                <controlpoint xx="0.5001" yy="0.8" zz="0.0" />
            </patch>
        </primitive>

        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="cone">
            <cylinder base="2" top="0" height="3" slices="16" stacks="16" />
        </primitive>

        <primitive id="cone1">
            <cylinder base="1.5" top="0" height="2.5" slices="16" stacks="16" />
        </primitive>

        <primitive id="cone2">
            <cylinder base="1" top="0" height="1.5" slices="16" stacks="16" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="18" stacks="18" />
        </primitive>

        <primitive id="rectangle2sides">
            <cylinder base="0.5" top="0.5" height="3" slices="2" stacks="2" />
        </primitive>

        <primitive id="plane">
            <plane npartsU="20" npartsV="20" />
        </primitive> 

        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0.5" y3="0.8" z3="0" />
        </primitive>
 
        <primitive id="cylinder">
            <cylinder base="0.4" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="telescopeLegPrim">
            <cylinder2 base="0.2" top="0.2" height="2" slices="16" stacks="16" />
        </primitive>

        <primitive id="thickOrbit">
            <torus inner="0.02" outer="1" slices="18" loops="18" />
        </primitive>

        <!-- orbits far from the sun need to be thinier because of big scales applyied -->
        <primitive id="thinOrbit">
            <torus inner="0.01" outer="1" slices="18" loops="18" />
        </primitive>

        <!-- for ring of saturn -->
        <primitive id="ring">
            <torus inner="0.15" outer="1" slices="18" loops="18" />
        </primitive>

        <primitive id="torus">
            <torus inner="0.25" outer="1" slices="18" loops="18" />
        </primitive>
    </primitives>

    <components>
        <component id="Root">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="blackMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="skybox" />    
                <componentref id="shootingStar" /> 
                <componentref id="star" />
                <componentref id="star1" />
                <componentref id="solarSystem" />
                <componentref id="telescope" />
            </children>
        </component>

          <!-- skybox below --> 
        <component id="skybox">
            <transformation>
                <translate x="0" y="10" z="0"/>
                <scale x="180" y="180" z="180" /> 
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
                <!-- length is so small for texture to repeat over and over -->
                <texture id="skyTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="frontSkybox" />
                <componentref id="topSkybox" />
                <componentref id="bottomSkybox" />
                <componentref id="backSkybox" />                
                <componentref id="rightSkybox" />
                <componentref id="leftSkybox" /> 
                <componentref id="ground" />
            </children>
        </component>

        <component id="frontSkybox">
            <transformation>
                <translate x="0" y="0" z="0.5" />
                <rotate axis="y" angle="180" /> 
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component> 

        <component id="topSkybox">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component> 

       <component id="backSkybox">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>    

        <component id="rightSkybox">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>     

        <component id="bottomSkybox">
            <transformation>
                <translate x="0" y="-0.50" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="ground">
            <transformation>
                <translate x="0" y="-0.056" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="grassTexture" length_s="0.1" length_t="0.1"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>  

        <component id="leftSkybox">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"  />
            </children>
        </component>

           <!-- telescope components below -->
        <component id="telescope">
            <transformation>
                <transformationref id="telescopeTransform" />
            </transformation>
            <materials>
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="eyeglass" />                
                <componentref id="legs" />
            </children>
        </component>

        <component id="eyeglass">
            <transformation>
                <translate x="0" y="0.6" z="-2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="eyeglasssdetail1" />
                <componentref id="eyeglasssdetail2" />
                <componentref id="eyeglassTop" />
            </children>
        </component>

        <component id="eyeglassTop">
            <transformation>
                <scale x="2.2" y="2.2" z="2.2" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="cylinder" />
            </children>
        </component>

        <component id="eyeglasssdetail1"> <!-- detail with torus on the eyeglass -->
            <transformation>
                <scale x="0.73" y="0.73" z="0.4" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="eyeglasssdetail2"> <!-- detail with torus on the eyeglass -->
            <transformation>
                <translate x="0" y="0" z="4.4" />
                <scale x="0.38" y="0.38" z="0.2" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="legMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="legs">
            <transformation>
                <transformationref id="identityTransform" />
            </transformation>
            <materials>
                <material id="legMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="leg1" />
                <componentref id="leg2" />
                <componentref id="leg3" />
                <componentref id="leg4" />
            </children>
        </component>

        <component id="leg1">
            <transformation>  
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="45" />             
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="telescopeLegPrim" />
                <componentref id="endOfLeg"/>
            </children>
        </component>

        <component id="leg2">
            <transformation>                             
                <rotate axis="x" angle="120" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>        
                <componentref id="endOfLeg"/>
                <primitiveref id="telescopeLegPrim" />
            </children>
        </component>

        <component id="leg3">
            <transformation>
                <rotate axis="x" angle="45" />
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="telescopeLegPrim" />              
                <componentref id="endOfLeg"/>             
            </children>
        </component>

        <component id="leg4">
            <transformation>
                <rotate axis="y" angle="90" />    
                <rotate axis="x" angle="120" />             
            </transformation>
            <materials>
                <material id="inherit" />
                <material id="telescopeMaterial" />
            </materials>
            <texture id="none"/>
            <children>                
                <componentref id="endOfLeg"/>   
                <primitiveref id="telescopeLegPrim" />  
            </children>
        </component>

        <component id="endOfLeg">
            <transformation>
                <translate x="0" y="0" z="2" />      
                <scale x="0.19" y="0.19" z="0.19"/>
            </transformation>
            <materials>
                <material id="endLegMaterial"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <!-- the 3 stars defined below -->
        <component id="star">
            <transformation>
                <transformationref id="starTransform" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="halfStarabove" />
                <componentref id="halfStardown" />
            </children>
        </component>

        <component id="star1">
            <transformation>
                <transformationref id="star1Transform" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <componentref id="halfStarabove" />
                <componentref id="halfStardown" />
            </children>
        </component>

        <component id="shootingStar">
            <transformation>
                <transformationref id="shootingStarTransform" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="shootingStarPart" />
                <componentref id="halfStarabove" />
                <componentref id="halfStardown" />            
            </children>
        </component>

        <component id="shootingStarPart">
            <transformation>
                <translate x="-0.1" y="0.28" z="-0.01" />
                <scale x="0.6" y="0.3" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="whiteMaterial" />
                <material id="sunMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="plane" />
            </children>
        </component> 

        <component id="halfStardown">
            <transformation>
                <translate x="1" y="0.5" z="0" />
                <rotate axis="z" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="triangle3D" />
                <componentref id="backHalfStardown" />
            </children>
        </component>

        <!-- stars can be seen from both sides -->
        <component id="backHalfStardown">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
            <children>
                <primitiveref id="triangle" />
            </children>
        </component>

        <component id="halfStarabove">
            <transformation>
                <transformationref id="identityTransform"/>              
            </transformation>
            <materials>
                <material id="whiteMaterial" />
            </materials>
            <texture id="sunTexture" length_s="1.0" length_t="1.0"/>
